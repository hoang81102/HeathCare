@page
@model ElderlyCareRazor.Pages.Admin.Users.CreateModel

@{
    ViewData["Title"] = "Create Account";
}

<h1 class="text-center">Create New Account</h1>

<div class="card shadow-lg p-4">
    <h4 class="text-primary">Account Information</h4>
    <hr />
    <div class="row">
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger" role="alert">
                <div asp-validation-summary="All"></div>
            </div>
        }
        <form method="post">
        <div class="col-md-6">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="AccountViewModel.Username" class="form-label fw-bold"></label>
                    <input asp-for="AccountViewModel.Username" class="form-control" placeholder="Enter username" />
                    <span asp-validation-for="AccountViewModel.Username" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="AccountViewModel.Password" class="form-label fw-bold"></label>
                    <input asp-for="AccountViewModel.Password" type="password" class="form-control" placeholder="Enter password" />
                    <span asp-validation-for="AccountViewModel.Password" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="AccountViewModel.Phone" class="form-label fw-bold"></label>
                    <input asp-for="AccountViewModel.Phone" class="form-control" placeholder="Enter phone number" />
                    <span asp-validation-for="AccountViewModel.Phone" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="AccountViewModel.Email" class="form-label fw-bold"></label>
                    <input asp-for="AccountViewModel.Email" type="email" class="form-control" placeholder="Enter email" />
                    <span asp-validation-for="AccountViewModel.Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="AccountViewModel.Fullname" class="form-label fw-bold"></label>
                    <input asp-for="AccountViewModel.Fullname" class="form-control" placeholder="Enter full name" />
                    <span asp-validation-for="AccountViewModel.Fullname" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="AccountViewModel.Address" class="form-label fw-bold"></label>
                    <input asp-for="AccountViewModel.Address" class="form-control" placeholder="Enter address" />
                    <span asp-validation-for="AccountViewModel.Address" class="text-danger"></span>
                </div>
        </div>

        <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="AccountViewModel.Birthdate" class="form-label fw-bold"></label>
                    <input asp-for="AccountViewModel.Birthdate" type="date" class="form-control" />
                    <span asp-validation-for="AccountViewModel.Birthdate" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="AccountViewModel.Hobby" class="form-label fw-bold"></label>
                    <input asp-for="AccountViewModel.Hobby" class="form-control" placeholder="Enter hobby" />
                    <span asp-validation-for="AccountViewModel.Hobby" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="AccountViewModel.AccountStatus" class="form-label fw-bold"></label>
                    <select asp-for="AccountViewModel.AccountStatus" class="form-control">
                        <option value="Active">Active</option>
                        <option value="Inactive">Inactive</option>
                    </select>
                    <span asp-validation-for="AccountViewModel.AccountStatus" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="AccountViewModel.RoleId" class="form-label fw-bold"></label>
                    <select asp-for="AccountViewModel.RoleId" class="form-select" asp-items="ViewBag.RoleId">
                        <option value="">Select Role</option>
                    </select>
                    <span asp-validation-for="AccountViewModel.RoleId" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-page="Index" class="btn btn-secondary">Back to List</a>
                    <input type="submit" value="Create Account" class="btn btn-primary" />
                </div>
           
        </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
