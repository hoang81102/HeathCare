@page
@model ElderlyCareRazor.Pages.Admin.ServiceCategories.IndexModel
@{
    ViewData["Title"] = "Service Categories";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h2>Service Categories</h2>
            <a asp-page="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add New Category
            </a>
        </div>
        <div class="card-body">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Category Name</th>
                            <th>Services Count</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.CategoriesWithCount != null && Model.CategoriesWithCount.Any())
                        {
                            @foreach (var item in Model.CategoriesWithCount)
                            {
                                <tr>
                                    <td>@item.Category.CategoryId</td>
                                    <td>@item.Category.CategoryName</td>
                                    <td>@item.ServiceCount</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center">No service categories found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>