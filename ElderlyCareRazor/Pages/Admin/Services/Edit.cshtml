@page "{id:int}"
@model ElderlyCareRazor.Pages.Admin.Services.EditModel
@{
    ViewData["Title"] = "Edit Service";
}

<div class="container">
    <h1>Edit Service</h1>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-warning">
                    <h5 class="mb-0">Edit Service Details</h5>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <input type="hidden" asp-for="Service.ServiceId" />

                        <div class="mb-3">
                            <label asp-for="Service.ServiceName" class="form-label">Service Name</label>
                            <input asp-for="Service.ServiceName" class="form-control" />
                            <span asp-validation-for="Service.ServiceName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Service.Description" class="form-label">Description</label>
                            <textarea asp-for="Service.Description" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Service.Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Service.Price" class="form-label">Price</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="Service.Price" class="form-control" type="number" step="0.01" min="0" />
                            </div>
                            <span asp-validation-for="Service.Price" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Service.CategoryId" class="form-label">Category</label>
                            <select asp-for="Service.CategoryId" class="form-select" asp-items="Model.Categories">
                                <option value="">-- Select Category --</option>
                            </select>
                            <span asp-validation-for="Service.CategoryId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Save Changes
                            </button>
                            <a asp-page="./Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}