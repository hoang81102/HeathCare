@page
@model ElderlyCareRazor.Pages.Admin.DashboardModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Admin Dashboard</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">Dashboard</li>
    </ol>

    <!-- Overview Cards -->
    <div class="row">
        <div class="col-xl-3 col-md-6">
            <div class="card bg-primary text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>Accounts</div>
                        <div class="h3">@Model.TotalAccounts</div>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" href="/Admin/Accounts">View Details</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-success text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>Caregivers</div>
                        <div class="h3">@Model.TotalCaregivers</div>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" href="/Admin/Caregivers">View Details</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-info text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>Customers</div>
                        <div class="h3">@Model.TotalCustomers</div>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" href="/Admin/Customers">View Details</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-warning text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>Elders</div>
                        <div class="h3">@Model.TotalElders</div>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" href="/Admin/Elders">View Details</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Booking Status Row -->
    <div class="row">
        <div class="col-xl-6">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-calendar me-1"></i>
                    Booking Status
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <div class="card bg-primary text-white">
                                <div class="card-body py-2">
                                    <div class="d-flex justify-content-between">
                                        <div>Pending</div>
                                        <div>@Model.PendingBookings</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="card bg-success text-white">
                                <div class="card-body py-2">
                                    <div class="d-flex justify-content-between">
                                        <div>Accepted</div>
                                        <div>@Model.AcceptedBookings</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="card bg-info text-white">
                                <div class="card-body py-2">
                                    <div class="d-flex justify-content-between">
                                        <div>In Progress</div>
                                        <div>@Model.InProgressBookings</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="card bg-secondary text-white">
                                <div class="card-body py-2">
                                    <div class="d-flex justify-content-between">
                                        <div>Completed</div>
                                        <div>@Model.CompletedBookings</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="card bg-danger text-white">
                                <div class="card-body py-2">
                                    <div class="d-flex justify-content-between">
                                        <div>Rejected</div>
                                        <div>@Model.RejectedBookings</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="card bg-dark text-white">
                                <div class="card-body py-2">
                                    <div class="d-flex justify-content-between">
                                        <div>Cancelled</div>
                                        <div>@Model.CancelledBookings</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="mt-3">
                        <a href="/Admin/Bookings" class="btn btn-primary btn-sm">View All Bookings</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Services Summary -->
        <div class="col-xl-6">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-clipboard-list me-1"></i>
                    Service Categories
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Category</th>
                                    <th>Services</th>
                                    <th>Bookings</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var category in Model.ServiceCategories)
                                {
                                    <tr>
                                        <td>@category.CategoryName</td>
                                        <td>@category.ServiceCount</td>
                                        <td>@category.BookingCount</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="mt-3">
                        <a href="/Admin/Services" class="btn btn-primary btn-sm">Manage Services</a>
                        <a href="/Admin/ServiceCategories" class="btn btn-secondary btn-sm ms-2">Manage Categories</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity & Top Caregivers -->
    <div class="row">
        <div class="col-xl-6">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-history me-1"></i>
                    Recent Bookings
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Customer</th>
                                    <th>Elder</th>
                                    <th>Service</th>
                                    <th>Status</th>
                                    <th>Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var booking in Model.RecentBookings)
                                {
                                    <tr>
                                        <td>@booking.BookingId</td>
                                        <td>@booking.CustomerName</td>
                                        <td>@booking.ElderName</td>
                                        <td>@booking.ServiceName</td>
                                        <td>
                                            @{
                                                string badgeClass = booking.Status switch
                                                {
                                                    "pending" => "bg-primary",
                                                    "accepted" => "bg-success",
                                                    "in-progress" => "bg-info",
                                                    "completed" => "bg-secondary",
                                                    "rejected" => "bg-danger",
                                                    "canceled" => "bg-dark",
                                                    _ => "bg-light text-dark"
                                                };
                                            }
                                            <span class="badge @badgeClass">@booking.Status</span>
                                        </td>
                                        <td>@booking.BookingDate.ToString("MM/dd/yyyy")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-6">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-star me-1"></i>
                    Top Rated Caregivers
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Caregiver</th>
                                    <th>Experience</th>
                                    <th>Specialty</th>
                                    <th>Rating</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var caregiver in Model.TopCaregivers)
                                {
                                    <tr>
                                        <td>@caregiver.FullName</td>
                                        <td>@caregiver.ExperienceYears years</td>
                                        <td>@caregiver.Specialty</td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <span class="me-2">@caregiver.Rating.ToString("0.0")</span>
                                                @for (int i = 1; i <= 5; i++)
                                                {
                                                    if (i <= Math.Floor(caregiver.Rating))
                                                    {
                                                        <i class="fas fa-star text-warning"></i>
                                                    }
                                                    else if (i - caregiver.Rating < 1 && i - caregiver.Rating > 0)
                                                    {
                                                        <i class="fas fa-star-half-alt text-warning"></i>
                                                    }
                                                    else
                                                    {
                                                        <i class="far fa-star text-warning"></i>
                                                    }
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Links -->
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-link me-1"></i>
            Quick Links
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-3 mb-3">
                    <a href="/Admin/Accounts/Create" class="btn btn-primary btn-lg w-100">
                        <i class="fas fa-user-plus mb-2"></i><br />
                        Add New Account
                    </a>
                </div>
                <div class="col-md-3 mb-3">
                    <a href="/Admin/Services/Create" class="btn btn-success btn-lg w-100">
                        <i class="fas fa-plus-circle mb-2"></i><br />
                        Add New Service
                    </a>
                </div>
                <div class="col-md-3 mb-3">
                    <a href="/Admin/Reports/ServiceUsage" class="btn btn-info btn-lg w-100 text-white">
                        <i class="fas fa-chart-bar mb-2"></i><br />
                        Service Usage Report
                    </a>
                </div>
                <div class="col-md-3 mb-3">
                    <a href="/Admin/Reports/FeedbackAnalysis" class="btn btn-warning btn-lg w-100">
                        <i class="fas fa-comment-dots mb-2"></i><br />
                        Feedback Analysis
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>